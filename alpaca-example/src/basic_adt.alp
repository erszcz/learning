module basic_adt

export len/1

export_type my_list, opt

{- simple linked list,
   multi-line comment.
-}
type my_list 'x = Cons ('x, my_list 'x) | Nil

type opt 'a = None | Some 'a

let len l = match l with
    Nil -> 0
    -- single line comment should be ignored:
  | Cons (_, tail) -> 1 + (len tail)
