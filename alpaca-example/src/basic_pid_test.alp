module basic_pid_test

export pid_fun/1,
       start_pid_fun/1

export m_add/1

type t = Add int | Fetch (pid int)

let m_add i = Add i

let pid_fun x = receive with
    Add i -> pid_fun x + i
  | Fetch sender ->
    let sent = send x sender in
                    pid_fun x

let start_pid_fun x = spawn pid_fun x
